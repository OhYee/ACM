{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "g++",
            "command": "g++",
            "isShellCommand": true,
            "showOutput": "silent",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "-g",
                "${file}",
                "-o",
                "${file}.exe"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "编译C/C++",
            "command": "compile.bat",
            "isShellCommand": true,
            "showOutput": "silent",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "${file}"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^.*Code(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$", //文件在Code文件夹下 只截取文件名部分 不截取全路径
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "编译Python",
            "command": "cpy.bat",
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "${file}"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "py",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "echo",
            "command": "echo",
            "isShellCommand": true,
            "showOutput": "silent",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "echo",
                "${workspaceRoot}/.vscode/.clang-format"
            ] // 编译命令参数
        }
    ]
}